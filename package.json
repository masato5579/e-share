    "scripts": {
        "dev": "prettier --write ./resources/js && eslint ./resources/js && node_modules/.bin/blade-formatter --write resources/**/*.blade.php && npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "lint": "eslint ./resources/js",
