{
    "env": {
      "es2021": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 12,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "plugins": [
        "react-hooks",
        "react",
        "import"
    ],
    "extends": [
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "prettier"
    ],
    "rules": {
      "react/prop-types": "off",
      "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
      "semi": [
          "error",
          "never"
      ]
    }
}